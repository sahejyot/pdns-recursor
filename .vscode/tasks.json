{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "args": ["-j$(nproc)"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "..",
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build"
    },
    {
      "label": "rebuild",
      "type": "shell",
      "command": "make",
      "args": ["clean", "&&", "make", "-j$(nproc)"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "dependsOn": "clean",
      "group": "build"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "make",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "test"
    }
  ]
}

